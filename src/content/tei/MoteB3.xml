			<lg n="1" type="poema" corresp="dama" met="3x7" rhyme="abb" >
				<l n="1">Levantaos a  bailar,</l> 
				<l n="2">que con tal disposición </l>
				<l n="3">bien podéis bailar sin son.</l>
			</lg>



			<lg n="2" type="poema" corresp="caballero" met="3x7" rhyme="abb" >
				<l n="1">No parescería loco</l>
				<l n="2">en bailar sin son por vos</l>
				<l n="3">si bailásemos los dos.</l>
			</lg> 

